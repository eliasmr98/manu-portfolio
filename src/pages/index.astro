---
import Badge from "../components/Badge.astro";
import Experience from "../components/Experience.astro";
import AboutMe from "../components/AboutMe.astro";
import BehanceIcon from "../components/icons/BehanceIcon.astro";
import ContactIcon from "../components/icons/ContactIcon.astro";
import LinkedInIcon from "../components/icons/LinkedInIcon.astro";
import ProjectsIcon from "../components/icons/ProjectsIcon.astro";
import SuitcaseIcon from "../components/icons/SuitcaseIcon.astro";
import UserIcon from "../components/icons/UserIcon.astro";
import Projects from "../components/Projects.astro";
import SectionContainer from "../components/SectionContainer.astro";
import SocialPill from "../components/SocialPill.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Manuel García Portfolio - Diseñador Gráfico y UX/UI">
  <main class="px-4">
    <SectionContainer class="pt-28 pb-24" id="top">
      <img
        class="rounded-full size-32 mb-4 shadow-2xl shadow-gray-500/20 max-w-full h-auto"
        src="/projects/manuel.png"
        alt="Manuel photo"
      />
      <h1
        class="text-3xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10 text-gray-800"
      >
        Hola, soy Manuel
      </h1>
      <h2 class="text-xl lg:text-2xl text-pretty max-w-[700px]">
        <span class="text-pink-400">Diseñador Gráfico</span><span
          class="text-gray-700"
        >
          con más de 3 años de experiencia, especializado en
        </span>
        <span class="text-pink-400">UX/UI</span>.
        <span class="text-gray-700"
          >Desde Valencia, me enfoco en crear experiencias visuales únicas,
          funcionales y centradas en las personas.</span
        >
      </h2>
      <nav class="flex gap-4 mt-8 flex-wrap">
        <!-- todo: add href -->
        <SocialPill href="https://www.linkedin.com">
          <LinkedInIcon class="size-4 md:size-6" />
          <span class="text-gray-600">LinkedIn</span>
        </SocialPill>
        <SocialPill href="https://behance.net/mardekoro">
          <BehanceIcon class="size-4 md:size-6" />
          <span class="text-gray-600">Behance</span>
        </SocialPill>
        <button
          id="copy-email-btn"
          type="button"
          title="Copiar correo al portapapeles"
          class="rounded-full cursor-pointer border border-pink-200 flex justify-center items-center gap-x-2 py-1 px-2 text-xs lg:text-base md:py-2 md:px-4 bg-pink-50 hover:bg-pink-100 hover:shadow-sm transition-all duration-300 ease-in-out"
        >
          <ContactIcon class="size-4 md:size-6" />
          <span class="text-gray-600">mardekoro@gmail.com</span>
        </button>
      </nav>
    </SectionContainer>

    <SectionContainer id="experiencia">
      <h2
        class="text-xl lg:text-2xl font-semibold mb-6 flex gap-x-3 items-center text-gray-800"
      >
        <SuitcaseIcon class="size-6 md:size-8" />
        Experiencia laboral
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="proyectos">
      <h2
        class="text-xl lg:text-2xl font-semibold mb-6 flex gap-x-3 items-center text-gray-800"
      >
        <ProjectsIcon class="size-6 md:size-8" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <h2
        class="text-xl lg:text-2xl font-semibold mb-6 flex gap-x-3 items-center text-gray-800"
      >
        <UserIcon class="size-6 md:size-8" />
        Sobre mí
      </h2>
      <AboutMe />
    </SectionContainer>
  </main>
</Layout>
